<!--pages/singletask/singletask.wxml-->

<i-panel title="任务内容" hide-border="true">
  <i-row>
    <i-col span="3">
      <i-radio checked="{{checkStatus}}" bindchange="statusTap">
      </i-radio>
    </i-col>
    <i-col span="18">
      <i-input value="{{caption}}" type="textarea" placeholder="标题" bindblur ="onCaptionChanged"/>
    </i-col>
    <i-col span="3">
      <picker mode="date" value="{{createDate}}" bindchange="dateChange">
        <view class="i-swipeout-image" style="background:#ffffff;">
          <i-icon size="34" color="#2d8cf0" type="time" />
        </view>
      </picker>
    </i-col>
  </i-row>
  <i-input value="{{content}}" type="textarea" placeholder="内容" bindblur="onContentChanged"/>
</i-panel>